{
  "name": "node-netkit",
  "description": "Awesome utilities for working with network on Linux",
  "version": "0.1.0-canary.1",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "mocha \"**/*.test.ts\" --retries 2",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,md}\"",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm test && pnpm run format:check && pnpm run typecheck && pnpm build"
  },
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.2",
    "@types/prompts": "^2.4.9",
    "chai": "^5.1.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "type-fest": "^4.14.0",
    "typescript": "^5.4.3"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./ip": {
      "import": {
        "types": "./dist/ip/index.d.ts",
        "default": "./dist/ip/index.js"
      },
      "require": {
        "types": "./dist/ip/index.d.cts",
        "default": "./dist/ip/index.cjs"
      }
    }
  },
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahradelahi/node-netkit.git"
  },
  "license": "GPL-3.0",
  "keywords": [
    "network",
    "ip",
    "tun",
    "route",
    "linux",
    "toolkit",
    "node"
  ],
  "publishConfig": {
    "access": "public"
  }
}
